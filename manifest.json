{
  "manifest_version": 3,
  "name": "Promptly",
  "version": "1.0.0",
  "description": "AI-powered argument analysis, fact-checking, and intelligent content verification for any webpage.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js", "keyboard-shortcuts.js"],
      "css": ["content-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "open-smart-reply": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Open Promptly"
    },
    "summarize-content": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Summarize current content"
    },
    "generate-replies": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Generate reply suggestions"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["analyzer/*", "config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
